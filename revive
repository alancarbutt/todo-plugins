>>>>>>> f58d44633ea53645215e991d55af17c9e20ced06
if [ "$1" == "usage" ]; then
    usage
fi

shift

if [ -z "$1" ]; then
    listAvailableTodos
elif [[ "$1" =~ [0-9]+ ]]; then
    reviveTodo "$1"
else
    usage
fi
