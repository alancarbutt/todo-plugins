#*** }}}

## Copies todo from done.txt back to todo.txt ## {{{

>>>>>>> f58d44633ea53645215e991d55af17c9e20ced06
function reviveTodo {
    getTodo "$1" "$TODO_DIR/done.txt"
    cleanTodo=$(echo "$todo" | sed -E 's/x [0-9]{4}-[0-9]{2}-[0-9]{2} //')
    $TODO_FULL_SH add "$cleanTodo"

    exit 0
}

